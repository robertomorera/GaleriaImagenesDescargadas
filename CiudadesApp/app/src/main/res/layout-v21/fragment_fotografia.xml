<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/fondoFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:id="@+id/txtNombreFoto"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fotografia"
        />


    <android.support.design.widget.FloatingActionButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/fabLike"
    app:backgroundTint="@color/colorFabLike"
    android:src="@drawable/ic_thumb_up_white_24dp"
    android:layout_gravity="end|bottom|left"
    android:layout_marginLeft="50dp"
    android:layout_marginBottom="40dp"
    />


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fabDislike"
        app:backgroundTint="@color/colorFabDislike"
        android:src="@drawable/ic_thumb_down_white_24dp"
        android:layout_gravity="end|bottom|right"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="40dp"
        />

</FrameLayout>